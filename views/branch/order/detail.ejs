<%- include('../../partials/main', { pageTitle: 'Order detail' }) %>
<!-- tracking section start -->
<div class="page-body">
    <!-- tracking table start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="title-header title-header-block package-card">
                            <div>
                                <h5>Order #<%= order._id%></h5>
                            </div>
                            <div class="card-order-section">
                                <ul>
                                    <li><%= order.created_date.toLocaleDateString('en-UK', options)%></li>
                                    <li>No of Itmes: <%= order.product_items.length %></li>
                                    <li>Total: ₹<%= order.grand_total%></li>
                                </ul>
                            </div>
                        </div>
                        <div class="bg-inner cart-section order-details-table">
                            <div class="row g-4">
                                <div class="col-xl-8">
                                    <div class="table-responsive table-details">
                                        <table class="table cart-table table-borderless">
                                            <thead>
                                                <tr>
                                                    <th colspan="4">Items</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% order.product_items.forEach(function(item){ %>
                                                <tr class="table-order">
                                                    <td>
                                                        <a href="javascript:void(0)">
                                                            <img src="<% route %>/image/<%= item.image %>"
                                                                class=" lazyload" alt="">
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <p>Product Name</p>
                                                        <h5><%= item.name %></h5>
                                                    </td>
                                                    <td>
                                                        <p>Quantity</p>
                                                        <h5><%= item.quantity %></h5>
                                                    </td>
                                                    <td>
                                                        <p>Price</p>
                                                        <h5>₹<%= item.price %></h5>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>

                                            <tfoot>
                                                <tr class="table-order">
                                                    <td colspan="3">
                                                        <h5>Subtotal :</h5>
                                                    </td>
                                                    <td>
                                                        <h4>₹<%= order.total_price%></h4>
                                                    </td>
                                                </tr>

                                                <tr class="table-order">
                                                    <td colspan="3">
                                                        <h5>Shipping :</h5>
                                                    </td>
                                                    <td>
                                                        <h4>₹<%= order.delivery_fee%></h4>
                                                    </td>
                                                </tr>

                                                <tr class="table-order">
                                                    <td colspan="3">
                                                        <h5>Tax :</h5>
                                                    </td>
                                                    <td>
                                                        <h4>₹<%= order.tax %>0.0</h4>
                                                    </td>
                                                </tr>

                                                <tr class="table-order">
                                                    <td colspan="3">
                                                        <h4 class="theme-color fw-bold">Total Price :</h4>
                                                    </td>
                                                    <td>
                                                        <h4 class="theme-color fw-bold">₹<%= order.grand_total%></h4>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>

                                <div class="col-xl-4">
                                    <div class="order-success">
                                        <div class="row g-4">
                                            <h4>summery</h4>
                                            <ul class="order-details">
                                                <li>Customer ID: <%= order.user_id._id%></li>
                                                <li>Order Date: <%= order.user_id.first_name %> <%= order.user_id.last_name %></li>
                                                <!-- <li>Total Orders: <%= order.total_orders %></li> -->
                                            </ul>

                                            <h4>summery</h4>
                                            <ul class="order-details">
                                                <li>Order ID: <%= order.id%></li>
                                                <li>Order Date: <%= order.created_date.toLocaleDateString('en-UK', options) %></li>
                                                <li>Order Total: <%= order.grand_total %></li>
                                            </ul>

                                            <h4>shipping address</h4>
                                            <ul class="order-details">
                                                <li><%= order.address_id.address_1 %></li>
                                                <li><%= order.address_id.address_2%></li>
                                                <li><%= order.address_id.country%>, <%= order.address_id.pincode %></li>
                                                <li>Contact no. <%= order.user_id.phone%></li>
                                            </ul>

                                            <div class="payment-mode">
                                                <h4>payment Status</h4>
                                                <p><%= order.payment_method %></p>
                                            </div>

                                            <div class="delivery-sec">
                                                <h3>expected date of delivery: <span><%= order.delivery_date%></span>
                                                </h3>
                                                <!-- <a href="order-tracking.html">track order</a> -->
                                            </div>
                                        </div>
                                    </div>
                                </div>

                              
                            </div>
                        </div>
                        <!-- section end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tracking table end -->

    <div class="container-fluid">
        <!-- footer start-->
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2022 © Fastkart theme by pixelstrap</p>
                </div>
            </div>
        </footer>
    </div>
</div>
<!-- tracking section End -->


  <!-- footer start-->
  <%- include('../../partials/footer')%>
  <!-- footer End-->

  <%- include('../../partials/end')%>

