                    <img style="height: 200px; width:200px"
                      class="mr-4"
                      src="/image/<%= product.image %>"
                      alt="Image Description"  />
                  <% } %>
                </div>
              </div>
              <div class="col-8 pt-2">
                <h3 class="border-bottom mb-4"><%= product.name %></h3>
      
