<%- include('../../partials/main', { pageTitle: 'Update Vehicles' }) %>

            <!-- Container-fluid starts-->
            <div class="page-body">
                <!-- New User start -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-sm-8 m-auto">
                                    <div class="card">
                                        <div class="card-body title-header option-title">
                                            <h5>Update Vehicle</h5>
                                        </div>
                                    </div>
                                    
                                    <form class="theme-form theme-form-2 mega-form" action="/admin/vehicle/update/:vehicleId" method="POST">
                                        <div class="card" >
                                            <div class="card-body">
                                                <div class="card-header-2">
                                                    <h5>Vehicle Information </h5>
                                                </div>
                                                <div class="row">
                                                    <div class="mb-4 row align-items-center">
                                                        <label
                                                            class="form-label-title col-lg-3 col-md-3 mb-0">Vehicle Number</label>
                                                        <div class="col-md-9 col-lg-9">
                                                            <input class="form-control" type="text" name="vehicle_number" placeholder="Enter the Vehicle Number" value="<% vehicle.vehicle_number>" required>
                                                        </div >
                                                    </div>
                                                    
                                                    <div class="mb-4 row align-items-center">
                                                        <label class="col-sm-3 col-form-labrl form-label-title">Deliveryman</label>
                                                        <div class="col-sm-9">
                                                            <select class="js-example-basic-single w-100" name="deliveryman_id" value="<%= vehicle.deliveryman_Id.fname%>">
                                                                <option disabled>--- Select Any One ---</option>
                                                                    <% if (deliveryman != '') { %>        
                                                                         <% deliveryman.forEach((row, index) => { %> 
                                                                         <option value="<%= row.id %>"> <%= row.fname %></option>
                                                                    <% }) %>      
                                                                    <% } else { %>
                                                                         <option disabled>Nothing To Show</option>
                                                                    <% } %>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="mb-4 row align-items-center">
                                                        <label class="col-sm-3 col-form-labrl form-label-title">Branch</label>
                                                        <div class="col-sm-9">
                                                            <select class="js-example-basic-single w-100" name="branch_id" value="<% vehicle.branch_id.name%>">
                                                                <option disabled>--- Select Any One ---</option>
                                                                    <% if (branch != '') { %>        
                                                                         <% branch.forEach((row, index) => { %> 
                                                                         <option value="<%= row.id %>"> <%= row.name %></option>
                                                                    <% }) %>      
                                                                    <% } else { %>
                                                                         <option disabled>Nothing To Show</option>
                                                                    <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-body">
                                                    <div class="row align-items-center">
                                                        <button class="btn btn-solid" type="submit">Add Vehicle</button>
                                                    </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- New User End -->

                <!-- footer start -->
                    <%- include('../../partials/footer')%>
                <!-- footer end -->
            </div>
            <!-- Container-fluid end -->

<%- include('../../partials/end')%>