<%- include('../../partials/main', { pageTitle: 'Update new DeliveryMan' }) %>

            <!-- Container-fluid starts-->
            <div class="page-body">
                <!-- New User start -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-sm-8 m-auto">
                                    <div class="card">
                                        <div class="card-body title-header option-title">
                                            <h5 style="font-size: calc(20px + (22 - 18) * ((100vw - 320px) / (1920 - 320)));">Update New Delivery Man</h5>
                                        </div>
                                    </div>
                                    <form class="theme-form theme-form-2 mega-form" action="/admin/deliveryman/update/<%= deliveryman._id %>" method="post" enctype="multipart/form-data">
                                        <div class="card" >
                                            <div class="card-body">
                                                <div class="card-header-2">
                                                    <h5>Personal Information </h5>
                                                </div>
                                                <div class="row">
                                                    <div class="mb-4 row align-items-center">
                                                        <label
                                                            class="form-label-title col-lg-3 col-md-3 mb-0">First Name</label>
                                                        <div class="col-md-9 col-lg-9">
                                                            <input class="form-control" type="text" name="fname" placeholder="Enter your first Name" required value="<%= deliveryman.fname %>">
                                                        </div >
                                                    </div>
                                                    
                                                    <div class="mb-4 row align-items-center">
                                                        <label
                                                            class="form-label-title col-lg-3 col-md-3 mb-0">Last Name</label>
                                                        <div class="col-md-9 col-lg-9">
                                                            <input class="form-control" type="text" placeholder="Enter your last name" name="lname" required value="<%=deliveryman.lname %>">
                                                        </div>
                                                    </div>

                                                    <div class="mb-4 row align-items-center">
                                                        <label
                                                            class="col-lg-3 col-md-3 col-form-label form-label-title">Email
                                                        </label>
                                                        <div class="col-md-9 col-lg-9">
                                                            <input class="form-control" type="email" name="email" placeholder="Enter Email" required value="<%= deliveryman.email%>">
                                                        </div>
                                                    </div>

                                                    <div class="mb-4 row align-items-center">
                                                        <label
                                                            class="col-lg-3 col-md-3 col-form-label form-label-title">Phone
                                                        </label>
                                                        <div class="col-md-9 col-lg-9">
                                                            <input class="form-control" type="text" name="phone" placeholder="Enter Phone Number" required value="<%= deliveryman.phone%>">
                                                        </div>
                                                    </div>

                                                    <div class="mb-4 row align-items-center">
                                                        <label
                                                            class="col-lg-3 col-md-3 col-form-label form-label-title">Password</label>
                                                        <div class="col-md-9 col-lg-9">
                                                            <input class="form-control" type="password" name="password" placeholder="Enter Password" required value="<%= deliveryman.password%>">
                                                        </div>
                                                    </div>

                                                    <div class="my-4 row align-items-center">
                                                        <label class="col-sm-3 col-form-label form-label-title">DeliveryMan Image</label>
                                                        <div class="custom-file">
                                                            <input type="file" name="deliveryman_image" id="customFileEg1" class="form-control form-choose"
                                                                    accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|image/*"
                                                                    oninvalid="document.getElementById('en-link').click()">
                                                            <div class="custom-file">
                                                                <div class="text-center">
                                                                    <% if ( deliveryman.deliveryman_image ){ %>
                                                                        <img style="height: 290px;border: 1px solid;border-radius: 10px;width: 70%;margin-top:2rem" id="viewer" src="/images/<%= deliveryman.deliveryman_image%>" alt="image" />
                                                                    <% } else { %>
                                                                        <img style="height: 290px;border: 1px solid;border-radius: 10px;width: 70%;margin-top:2rem" id="viewer" src="/public/images/img2.jpg" alt="image" />
                                                                    <% } %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="card-header-2">
                                                    <h5>Identity</h5>
                                                </div>
                                                
                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-sm-3 col-form-labrl form-label-title">Branch</label>
                                                    <div class="col-sm-9">
                                                        <select class="js-example-basic-single w-100" name="branch">
                                                            <option disabled>--- Select Any One ---</option>
                                                                <% if (branch != '') { %>        
                                                                     <% branch.forEach((row, index) => { %> 
                                                                     <option value="<%= row.id %>"> <%= row.name %></option>
                                                                <% }) %>      
                                                                <% } else { %>
                                                                     <option disabled>Nothing To Show</option>
                                                                <% } %>
                                                        </select>
                                                    </div>
                                                </div>

                                                 <div class="mb-4 row align-items-center">  
                                                    <label class="col-sm-3 col-form-label form-label-title">Identity Type</label>
                                                    <div class="col-sm-9">
                                                        <select class="js-example-basic-single w-100" name="identity_type" value="<%= deliveryman.identity_type %>">
                                                            <option value="none">-- Select Identity Type  --</option> 
                                                            <option value="Pan Card">PAN Card</option>
                                                            <option value="aadhar Card">Aadhar Card</option>
                                                            <option value="Passport Id">Passport</option>
                                                            <option value="Driving Id">Driving Lisence</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="mb-4 row align-items-center">
                                                        <label
                                                            class="form-label-title col-lg-3 col-md-3 mb-0">Identity Number</label>
                                                        <div class="col-md-9 col-lg-9">
                                                            <input class="form-control" type="text" placeholder="Enter Identity Number" name="identity_number" value="<%= deliveryman.identity_number%>" >
                                                        </div>
                                                 </div>
                                                <div class="my-4 align-items-center">
                                                    <label class="col-sm-3 col-form-label form-label-title">Identity Image</label>
                                                    <div class="custom-file">
                                                        <input type="file" name="id_image" id="customFileEg1" class="form-control form-choose"
                                                                accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|image/*"
                                                                oninvalid="document.getElementById('en-link').click()">
                                                        <div class="custom-file">
                                                            <div class="text-center">
                                                                <% if ( deliveryman.id_image ){ %>
                                                                    <img style="height: 290px;border: 1px solid;border-radius: 10px;width: 70%;margin-top:2rem" id="viewer" src="/images/<%= deliveryman.id_image%>" alt="image" />
                                                                <% } else { %>
                                                                    <img style="height: 290px;border: 1px solid;border-radius: 10px;width: 70%;margin-top:2rem" id="viewer" src="/public/images/img2.jpg" alt="image" />
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="card">
                                            <div class="card-body">
                                                    <div class="row align-items-center">
                                                        <button class="btn btn-solid" type="submit">Update Delivery Man</button>
                                                    </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- New User End -->

                <!-- footer start -->
                    <%- include('../../partials/footer')%>
                <!-- footer end -->
            </div>
            <!-- Container-fluid end -->

            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                
            <script>
                function readURL(input, viewer_id) {
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();
            
                        reader.onload = function (e) {
                            $('#'+viewer_id).attr('src', e.target.result);
                        }
            
                        reader.readAsDataURL(input.files[0]);
                    }
                }
            
                $("#customFileEg1").change(function () {
                    readURL(this, 'viewer');
                });
                $("#customFileEg2").change(function () {
                    readURL(this, 'viewer2');
                });
            </script>
            <script>
                function validateInput(inputField) {
                    // Remove any non-numeric characters from the input
                    inputField.value = inputField.value.replace(/[^0-9]/g, '');
                
                    // Display an error message if input is empty
                    var errorMessage = document.getElementById("errorMessage");
                    if (inputField.value === "") {
                        errorMessage.textContent = "Please enter a number.";
                    } else {
                        errorMessage.textContent = "";
                    }
                }
                </script>
            

<%- include('../../partials/end')%>