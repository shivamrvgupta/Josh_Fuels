<%- include('../../partials/main', { pageTitle: 'product detail' }) %>
<link rel="stylesheet" href="/public/css/style2.css">

<style>
  .item-box {
    border-radius: 15px;
    border: 2px solid #cacad0;
  }
</style>

<div class="page-body">
  <!-- tracking table start -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body d-flex">
            <div class="col-xl-6 wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
              <div class="">
                  <img src="/images/<%= product.image %>" id="img-1" data-zoom-image="../assets/images/product/category/1.jpg" class="img-fluid image_zoom_cls-0 blur-up lazyloaded" alt="">
              </div>
          </div>
          <div class="col-xl-6 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                      <div class="right-box-contain">
                          <h2 class="name"><%= product.name%></h2>
                          <br>
                          <div class="price-rating">
                              <h3 class="theme-color price">₹<%= product.discounted_price %>   <small><del class="text-content">₹<%= product.price%> </del></small> <span class="offer theme-color">  (<%= product.discount %>)</span></h3>
                          </div>  
                          <br>

                          <div class="procuct-contain">
                              <p><%= product.description %>
                              </p>
                          </div>


                          <div class="pickup-box">
                              <div class="product-title">
                                  <h4><%product.branch%></h4>
                              </div>

                              <div class="product-info">
                                  <ul class="product-info-list product-info-list-2">
                                      <li>Category : <a href="javascript:void(0)"><%= product.category.name %></a></li>
                                      <li>Sub Category : <a href="javascript:void(0)"><%= product.sub_category.name%></a></li>
                                      <li>Tax : <a href="javascript:void(0)"><%= product.tax %></a></li>
                                      <li>Date : <a href="javascript:void(0)"><%= product.created_at.toLocaleDateString() %></a></li>
                                      <!-- <li>Stock : <a href="javascript:void(0)">2 Items Left</a></li> -->
                                  </ul>
                              </div>
                          </div>

                      </div>
            </div>
          </div>
          
        </div>
      </div>
      
      <div class="col-sm-4">
        <div class="card flex-wrap">
          <div class="card-header border-0 pb-1">
            <div class="card-header-title">
                <h4>Add On</h4>
            </div>
          </div>
          <div class=" card-body" id="items">
              <div class="mt-2 mb-2 d-flex">

                  <div class="item-box m-2">
                    <div
                      class="product-card card"
                      onclick="quickView('6')"
                      style="cursor: pointer"
                    >
                      <div
                        class="card-header inline_product clickable p-0"
                        style="height: 100%; width: 100%; overflow: hidden"
                      >
                        <div
                          class="d-flex align-items-center justify-content-center"
                        >
                          <img
                            src="/public/images/img2.jpg"
                            style="width: 100%; border-radius: 5%"
                          />
                        </div>
                      </div>

                      <div
                        class="card-body inline_product text-center p-1 clickable"
                        style="height: 1.5rem; max-height: 2.5rem"
                      >
                        <div
                          style="position: relative"
                          class="product-title1 text-dark font-weight-bold"
                        ><div>Add On1
                          <!-- <%= addon.name %> -->
                        </div>
                        <div class="justify-content-between text-center">
                          <div class="product-price text-center">
                            <!-- <%= addon.price %> -->86.24
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                  <div class="item-box  m-2">
                    <div
                      class="product-card card"
                      onclick="quickView('4')"
                      style="cursor: pointer"
                    >
                      <div
                        class="card-header inline_product clickable p-0"
                        style="height: 100%; width: 100%; overflow: hidden"
                      >
                        <div
                          class="d-flex align-items-center justify-content-center"
                        >
                          <img
                            src="/public/images/img2.jpg"
                            style="width: 100%; border-radius: 5%"
                          />
                        </div>
                      </div>

                      <div
                        class="card-body inline_product text-center p-1 clickable"
                        style="height: 1.5rem; max-height: 3.5rem"
                      >
                        <div
                          style="position: relative"
                          class="product-title1 text-dark font-weight-bold"
                        >
                          AddOn2
                        </div>
                        <div class="justify-content-between text-center">
                          <div class="product-price text-center">
                            ₹106.22
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

              </div>
          </div>

      </div>
  </div>

    <div class="col-12">
      <div class="product-section-box">
          <ul class="nav nav-tabs custom-nav" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Description</button>
              </li>

              <li class="nav-item" role="presentation">
                  <button class="nav-link" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab" aria-controls="info" aria-selected="false">Additional info</button>
              </li>
          </ul>
          <div class="tab-content custom-tab" id="myTabContent">
              <div class="tab-pane fade active show" id="description" role="tabpanel" aria-labelledby="description-tab">
                  <div class="product-description">
                      <div class="nav-desh">
                          <p><%= product.description%></p>
                      </div>
                  </div>
              </div>

              <div class="tab-pane fade" id="info" role="tabpanel" aria-labelledby="info-tab">
                  <div class="table-responsive">
                      <table class="table info-table">
                          <tbody>
                              <tr>
                                  <td>Product</td>
                                  <td><%= product.name %></td>
                              </tr>
                              
                              <tr>
                                  <td>Price</td>
                                  <td><%= product.price %></td>
                              </tr>
                              <tr>
                                  <td>Category</td>
                                  <td><%= product.category.name%></td>
                              </tr>
                              <tr>
                                  <td>Sub-Category</td>
                                  <td><%= product.sub_category.name%></td>
                              </tr>
                              <tr>
                                  <td>Discount</td>
                                  <td><%= product.discount%></td>
                              </tr>
                              <tr>
                                  <td>Available time starts</td>
                                  <td><%= product.available_time_starts %></td>
                              </tr>
                              <tr>
                                  <td>Available time ends</td>
                                  <td><%= product.available_time_ends%></td>
                              </tr>
                              <tr>
                                  <td>Created On</td>
                                  <td><%= product.created_at.toLocaleDateString()%></td>
                              </tr>
                              <tr>
                                  <td>Updated On</td>
                                  <td><%= product.updated_at.toLocaleDateString()%></td>
                              </tr>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
    </div>
</div>
</div>
</div>

  <!-- tracking table end -->

  <!-- Container-fluid End -->

  <!-- footer start-->
  <%- include('../../partials/footer')%>
  <!-- footer End-->

  <%- include('../../partials/end')%>

